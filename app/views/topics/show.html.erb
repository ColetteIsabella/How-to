<% title(@topic.name, "Topics") %>
<h2><%= @topic.name %></h2>

<%= link_to "Edit Topic", edit_topic_path(@topic) %>
<%= link_to "Delete Topic",
     topic_path(@topic),
     :method => :delete,
     :confirm => "Are you sure you want to delete this topic?" %>
<%= link_to "New Project", new_topic_project_path(@topic) %>

<ul id="projects">
  <% @topic.projects.each do |project| %>
  <li>
    #<%= project.id %> -
    <%= link_to project.title, [@topic, project] %>
  </li>
  <% end %>
</ul>
